// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "language_models": {
    "anthropic": {
      "version": "1"
    }
  },
  "features": {
    "copilot": false
  },
  "base_keymap": "VSCode",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "theme": "Catppuccin Mocha",
  "ui_font_size": 14,
  "tabs": {
    "alaway_show_close_button": true
  },
  "buffer_font_family": "CommitMono Nerd Font",
  "buffer_font_weight": 400,
  "buffer_font_size": 14,
  "buffer_line_height": "comfortable",
  "buffer_font_features": {
    // "dlig": true,
    // "liga": false,
    "zero": true,
    // "ss20": false,
    // "ss01": true,
    // "ss02": true,
    // "ss03": true,
    // "ss04": true,
    // "ss05": true,
    // "ss06": true,
    // "ss07": true,
    // "ss08": true,
    // "ss09": true,
    // "ss10": true,
    // "ss11": true,
    // "ss12": true,
  },
  "cursor_blink": false,
  "relative_line_numbers": true,
  "scrollbar": {
    "show": "never"
  },
  "vertical_scroll_margin": 0,
  "tab_bar": {
    "show": false
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "preferred_line_length": 100,
  "soft_wrap": "editor_width",
  "use_autoclose": true,
  "always_treat_brackets_as_autoclosed": true,
  "git": {
    "inline_blame": {
      "enabled": false,
      "delay_ms": 500
    }
  },
  "terminal": {
    "alternate_scroll": "off",
    "blinking": "terminal_controlled",
    "copy_on_select": true,
    "font_family": "FantasqueSansM Nerd Font",
    "line_height": "standard",
    "font_size": 14,
    "font_weight": 400,
    "toolbar": {
      "title": true
    },
    "working_directory": "current_project_directory",
    "button": false
  },
  "project_panel": {
    "button": false,
    "auto_fold_dirs": false,
    "scrollbar": {
      "show": "never"
    }
  },
  "assistant": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-5-sonnet-20240620"
    },
    "version": "2",
    "provider": "anthropic",
    "button": false
  },
  "outline_panel": {
    "button": false
  },
  "formatter": {
    "language_server": {
      "name": "biome"
    }
  },
  "inlay_hints": {
    "enabled": true
  },
  "languages": {
    "Rust": {
      "formatter": "language_server",
      "format_on_save": "on"
    },
    "Fish": {
      "tab_size": 2
    },
    "Shell Script": {
      "tab_size": 2
    }
  }
}
